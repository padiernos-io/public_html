  "name": "drupal/nbsp",
  "description": "Minimal module to insert a non-breaking space (&nbsp;) into the content by pressing Ctrl+Space or using the provided button.",
  "type": "drupal-module",
  "homepage": "https://www.drupal.org/project/nbsp",
  "authors": [
    {
      "name": "Antistatique",
      "email": "info@antistatique.net",
      "homepage": "https://www.antistatique.net",
      "role": "Sponsor"
    },
    {
      "name": "Kevin Wenger",
      "email": "contact@kevin-wenger.ch",
      "homepage": "https://www.drupal.org/u/wengerk",
      "role": "Author & Maintainer"
    }
  ],
  "support": {
    "issues": "https://www.drupal.org/project/issues/nbsp"
  },
  "license": "GPL-2.0-or-later",
  "require-dev": {
    "drupal/coder": "^8.3.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "drupal/core": "^10 || ^11"
  }
}

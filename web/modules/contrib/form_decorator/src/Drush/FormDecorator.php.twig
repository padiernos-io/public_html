{% import '@lib/di.twig' as di %}
<?php

declare(strict_types=1);

namespace Drupal\{{ machine_name }}\FormDecorator;

{% apply sort_namespaces %}
use Drupal\Core\Form\FormStateInterface;
use Drupal\form_decorator\{{ base_class }};
use Drupal\form_decorator\Attribute\FormDecorator;
{% if hook is empty %}
use Drupal\Core\Entity\ContentEntityFormInterface;
{% endif %}
{% if services %}
use Drupal\Core\Plugin\ContainerFactoryPluginInterface;
use Symfony\Component\DependencyInjection\ContainerInterface;
{{ di.use(services) }}
{% endif %}
{% endapply %}

/**
 * My form decorator.
 */
#[FormDecorator({% if hook is not empty %}'{{ hook }}'{% endif %})]
final class {{ class }} extends {{ base_class }} {% if services is not empty %}implements ContainerFactoryPluginInterface {% endif %}{
{% if services %}

  /**
   * The constructor.
   */
  public function __construct(
    array $configuration,
    $plugin_id,
    $plugin_definition,
{{ di.signature(services, true) }}
  ) {
    parent::__construct($configuration, $plugin_id, $plugin_definition);
  }

  /**
   * {@inheritdoc}
   */
  public static function create(ContainerInterface $container, array $configuration, $plugin_id, $plugin_definition): self {
    return new static(
      $configuration,
      $plugin_id,
      $plugin_definition,
{{ di.container(services) }}
    );
  }
{% endif %}

{% if not hook %}
  /**
   * {@inheritdoc}
   */
  public function applies(): bool {
    // Specify which forms shall be decorated.
    return $this->inner instanceof ContentEntityFormInterface && parent::applies();
  }

{% endif %}
  /**
   * {@inheritdoc}
   */
  public function buildForm(array $form, FormStateInterface $form_state, ...$args) {
    $form = $this->inner->buildForm($form, $form_state, ...$args);
    // Do your magic
    return $form;
  }

  /**
   * {@inheritdoc}
   */
  public function validateForm(array &$form, FormStateInterface $form_state) {
    $this->inner->validateForm($form, $form_state);
    // Validate your magic
  }

}
